<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
    <thead>
        <tr>
            <th>Posted by:</th>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
        <tr>

            <% if user_signed_in? %>
            <td><strong> <%= post.user.email %></strong></td>
            <% else %>
            <td><strong>Anonymous</strong></td>
            <%end%>
            <td><%= post.title %></td>
            <td><%= post.body %></td>

        </tr>
        <% end %>
    </tbody>
</table>