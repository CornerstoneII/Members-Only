<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
    <thead>
        <tr>
            <th>Posted by:</th>
            <th>Title</th>
            <th>Body</th>

        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
        <tr>

            <%= anonymous %>
            <td><%= post.title %></td>
            <td><%= post.body %></td>

        </tr>
        <% end %>
    </tbody>
</table>